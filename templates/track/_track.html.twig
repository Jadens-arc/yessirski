<div id="{{ track.uuid }}" class="alert alert-light ">
    <div class="d-flex flex-column-reverse flex-md-row justify-content-between ">
        <strong style="cursor: pointer; text-decoration: underline" onclick="play_track('{{ app.request.getSchemeAndHttpHost() }}/{{ track.path }}')">{{ track.title }}</strong>
        <div class="d-flex flex-row mb-3 mb-lg-0">
            <a class="btn btn-sm btn-secondary d-block me-2" download href="/{{ track.path }}">Save to Device</a>
            <a class="btn btn-sm btn-primary" href="{{ path("app_track_edit", {"uuid": track.uuid}) }}">Edit</a>
        </div>
    </div>
    <p>
        {% for artistTrack in track.artistTracks %}
            <a class="link text-light" href="{{ path("app_artist_edit", {"id": artistTrack.artist.id}) }}">
                {{ artistTrack.artist.name }}
            </a>{% if artistTrack != track.artistTracks|last %}, {% endif %}
        {% endfor %}
    </p>
    <span>Downloaded @ {{ track.created|date("d/m/y h:i a") }}</span>
    <div id="control_container_{{ app.request.getSchemeAndHttpHost() }}/{{ track.path }}"></div>
</div>
